<!DOCTYPE html>
<html>
<head>
  <title>Wiki Wiki BoBikky</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular-animate.js"></script>
  <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.4.js"></script>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">


    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/flatly/bootstrap.min.css">

    <!-- Latest compiled and minified JavaScript -->
<!--
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
     -->
</head>
<body ng-app="AngularRails">

  <nav class="navbar navbar-default" ng-controller="UserCtrl">

    <div class="container-fluid">

      <div class="navbar-header">
        <a class="navbar-brand" ng-click='go("/")'>Wiki Wiki BoBikky</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <form ng-controller="SearchCtrl" class="navbar-form navbar-left" role="search" action="/search" method="get">
          <div class="form-group">

            <input name="article" type="text" class="form-control" placeholder="Search for keywords...">

          </div>
          <div class="form-group">

            <input id="typeaheadd" data-provide="typeahead" type="text" ng-model="async" typeahead="address for address in getWikis($viewValue)" class="form-control" placeholder="in all Wikis">
            <input type="hidden" name="wiki_type" value="{{async}}" />

          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>

        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><a href="#"><%=current_user.email%></a></li>
            <li>
              <%= link_to "logout", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li><a ng-click='go("/users/sign_up")'>signup</a></li>
            <li><a ng-click='go("/users/sign_in")'>login</a></li>
          <% end %>
        </ul>
      </div>

    </div>

  </nav>

  <!-- notice and alert flashes for devise -->
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
