<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<h2>New Article in <strong><%= @wiki.description.html_safe %></strong></h2><br>
	</div>
</div>

<%= form_for :article, url: { action: "create" } do |f| %>
  <div class="col-md-offset-1">

    <div class="form-group col-md-10">
      <h4><%= f.label :title %></h4><br>
      <%= f.cktext_area :title, class: "form-control col-md-2" %>
    </div>

    <div class="form-group col-md-10">
      <h4><%= f.label :content %></h4><br>
      <%= f.cktext_area :content, class: "form-control col-md-2" %>
    </div>

    <div class="checkbox form-group col-md-10 col-md-offset-1">
      <%= check_box(@article.published, :published, {}, "true", "false") %>
      <div>Publish article</div>
    </div>

    <div class="checkbox form-group col-md-10 col-md-offset-1">
      <%= check_box(@article.needs_sources, :needs_sources, {}, "true", "false") %>
      <div>Needs sources</div><br>
    </div>

    <div class="form-group col-md-10 col-md-offset-4">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>

  </div>
<% end %>
